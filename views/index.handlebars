<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1>Yum Yum Burgers</h1>
    </div>
    <div class="col s6 center-align">
      <h3>Burgers to be Devoured!</h3>

      <ul>
        {{#each burgers}} {{#unless devoured}} {{>burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col s6 center-align">
      <h3>Devoured Burgers</h3>

      <ul>
        {{#each burgers}} {{#if devoured}} {{>burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>

    </div>
  </div>
</div>


<h2>Add a Burger</h2>

<div class="row">
  <form id="create-form" class="col s6">
    <div class="input-field col s6">
      <input placeholder="Enter New Burger Here..." id="burger-new" type="text">
      <label for="Burger">Create Your Own Burger</label>
    </div>
    <button type="submit">Add</button>
  </form>
</div>